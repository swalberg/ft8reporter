<ul class="nav nav-tabs">
  <li class=active> <%= link_to tag_icon(:list, pat(:list)), url(:spots, :index) %></li>
  <li> <%= link_to tag_icon(:plus, pat(:new)), url(:spots, :new) %></li>
</ul>
<div class=tabs-content>
  <table id=list class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th class="header list-menu">
          <div class=dropdown>
            <a href="#" class="list-menu-toggle dropdown-toggle" data-toggle='dropdown'>
              <%= tag_icon :magic %> <span class=caret></span>
            </a>
            <ul class="list-menu dropdown-menu" role=menu>
              <li class=list-menu-wrapper>
                <%= link_to tag_icon('check-square-o', pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link' %>
              </li>
              <li class=list-menu-wrapper.list-menu-wrapper-disabled>
                <%= link_to tag_icon('square-o', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled' %>
              </li>
              <li class="list-menu-divider divider"></li>
              <li class=list-menu-wrapper.list-menu-wrapper-disabled>
                <%=link_to tag_icon('trash-o', pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled' %>
                <div class='list-menu-popover-delete-selected popover right'>
                  <div class=arrow></div>
                  <h3 class=popover-title><%= pat(:delete_selected_title) %></h3>
                  <div class=popover-content>
                    <% form_tag url(:spots, :destroy_many), :method => :delete do %>
                      <%=hidden_field_tag :spot_ids, :'data-delete-many-ids' => true %>
                      <%=submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small' %>
                      <div class='btn btn-default btn-small cancel'><%= pat(:cancel) %></div>
                    <% end %>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </th>
                <th class=header> <%= mat(:spot, :id) %></th>
                <th class=header> <%= mat(:spot, :timestamp) %></th>
                <th class=header> <%= mat(:spot, :sender) %></th>
                <th class=header> <%= mat(:spot, :spotter) %></th>
                <th class=header> <%= mat(:spot, :frequency) %></th>
                <th class=header> <%= mat(:spot, :band) %></th>
                <th class=header> <%= mat(:spot, :mode) %></th>
                <th class=header> <%= mat(:spot, :range) %></th>
                <th class=header> <%= mat(:spot, :bearing) %></th>
                <th class=header> <%= mat(:spot, :lat) %></th>
                <th class=header> <%= mat(:spot, :lon) %></th>
                <th class=header> <%= mat(:spot, :snr) %></th>
                <th class=header> <%= mat(:spot, :grid) %></th>
                <th class=header> <%= mat(:spot, :region) %></th>
                <th class=header> <%= mat(:spot, :dxcc) %></th>
                <th class=header> <%= mat(:spot, :decoder) %></th>
                <th class=header> <%= mat(:spot, :antenna) %></th>
                <th class="header list-row-action-header"></th>
      </tr>
    </thead>

    <tbody>
      <% @spots.each do |spot| %>
        <tr class=list-row>
          <td class="list-column list-selectable">
            <%= check_box_tag 'spot_ids[]', :value => spot.id, :class => 'list-selectable-checkbox' %>
           </td>
          <td class=list-column> <%= spot.id %> </td>
          <td class=list-column> <%= spot.timestamp %> </td>
          <td class=list-column> <%= spot.sender %> </td>
          <td class=list-column> <%= spot.spotter %> </td>
          <td class=list-column> <%= spot.frequency %> </td>
          <td class=list-column> <%= spot.band %> </td>
          <td class=list-column> <%= spot.mode %> </td>
          <td class=list-column> <%= spot.range %> </td>
          <td class=list-column> <%= spot.bearing %> </td>
          <td class=list-column> <%= spot.lat %> </td>
          <td class=list-column> <%= spot.lon %> </td>
          <td class=list-column> <%= spot.snr %> </td>
          <td class=list-column> <%= spot.grid %> </td>
          <td class=list-column> <%= spot.region %> </td>
          <td class=list-column> <%= spot.dxcc %> </td>
          <td class=list-column> <%= spot.decoder %> </td>
          <td class=list-column> <%= spot.antenna %> </td>
          <td class="list-column list-row-action">
            <div class='list-row-action-wrapper'>
               <%= link_to tag_icon(:edit), :href => url(:spots, :edit, :id => spot.id), :rel => :tooltip, :title => "#{pat(:edit)} spot", :class => 'list-row-action-wrapper-link' %>
               <%= link_to tag_icon('trash-o'), :rel => :tooltip, :title => "#{pat(:delete)} spot", :class => 'list-row-action-delete-one list-row-action-wrapper-link' %>
               <div class="popover list-row-action-popover-delete-one left">
                 <div class=arrow> </div>
                 <h3 class=popover-title><%= pat(:delete, :model => "spot") %></h3>
                 <div class=popover-content>
                   <% form_tag url(:spots, :destroy, :id => spot.id), :method => :delete do %>
                     <%= submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small' %>
                     <div class="btn btn-default btn-small cancel"><%= pat(:cancel) %></div>
                   <% end %>
                 </div>
               </div>
             </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
